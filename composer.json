{
    "name": "marzpay/php-sdk",
    "description": "Official PHP SDK for MarzPay - Mobile Money Payment Platform for Uganda",
    "version": "1.0.0",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/Katznicho/marzpay-php",
    "support": {
        "email": "support@wearemarz.com",
        "issues": "https://github.com/Katznicho/marzpay-php/issues",
        "source": "https://github.com/Katznicho/marzpay-php",
        "docs": "https://wallet.wearemarz.com/documentation"
    },
    "keywords": [
        "marzpay",
        "mobile-money",
        "uganda",
        "payments",
        "collections",
        "disbursements",
        "api",
        "sdk",
        "laravel"
    ],
    "authors": [
        {
            "name": "MarzPay Team",
            "email": "dev@wearemarz.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.0",
        "ramsey/uuid": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "MarzPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MarzPay\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MarzPay\\Laravel\\Providers\\MarzPayServiceProvider"
            ],
            "aliases": {
                "MarzPay": "MarzPay\\Laravel\\Facades\\MarzPay"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "stan": "phpstan analyse src tests",
        "cs": "phpcs src tests",
        "cs-fix": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
